@model WebApp.ViewModels.Member.EditMemberViewModel
@{
    ViewBag.Title = "Изменение участника";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    @Html.HiddenFor(model => model.ProjectId)
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label for="Name">Имя</label>
        <input type="text" id="Name" name="Name" value="@Model.Name"/>
       <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Info">Информация</label>
        <input type="text" id="Info" name="Info" value="@Model.Info"/>
        <span asp-validation-for="Info" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="RoleId">Роль</label>
        <select id="RoleId" name="RoleId" class="form-control" asp-for="RoleId">
            <option value="">Выберите роль</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.Title</option>
            }
        </select>
        <span asp-validation-for="RoleId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="UserId">Пользователь</label>
        <select id="UserId" name="UserId" class="form-control" asp-for="UserId">
            <option value="">Выберите пользователя</option>
            @foreach (var user in Model.Users)
            {
                <option value="@user.Id">@user.UserName</option>
            }
        </select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>
    <button type="submit">Сохранить</button>
</form>