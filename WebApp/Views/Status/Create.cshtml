@using WebApp.HelperModels
@model WebApp.Models.Status
@{
    ViewBag.Title = "Добавление статуса";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Create" asp-controller="Status">
   <input type="hidden" name="projectId" value="@Model.ProjectId" />
    <div class="form-group">
       <label asp-for="Title">Название:</label><br />
       <input type="text" asp-for="Title" class="form-control" />
       <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color">Цвет:</label><br />
        <select asp-for="Color" class="form-control">
            @foreach (var color in (Color[]) Enum.GetValues(typeof(Color)))
            {
                <option value="@((int)color)">@color.ToString()</option>
            }
        </select>
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
