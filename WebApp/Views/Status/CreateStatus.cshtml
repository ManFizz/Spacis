@model WebApp.Models.Status
@{
    ViewBag.Title = "Добавление статуса";
}

<h2>Добавление статуса</h2>
<form asp-action="CreateStatus" asp-controller="Status">
    <p>
        <label asp-for="Title">Назвавние </label><br />
