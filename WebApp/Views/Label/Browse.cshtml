@model IEnumerable<WebApp.Models.Label>
@{
    ViewBag.Title = "Список меток";
}

<h2>Список меток</h2>
<p><a asp-action="Create">Добавить метку</a></p>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цвет</th>
            <th>Кол-во задач</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var l in Model)
    {
        <tr>
            <td>@l.Title</td>
            <td>@l.Color</td>
            <td>@l.Objectives.Count</td>
            <td>
                <div class="d-flex">
                    <form method="get" asp-action="Edit" asp-route-id="@l.Id">
                        <button type="submit" class="btn btn-primary">Изменить</button>
                    </form>
                    <form method="post" asp-action="Delete" asp-route-id="@l.Id">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>