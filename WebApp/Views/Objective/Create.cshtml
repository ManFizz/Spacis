@using Microsoft.AspNetCore.Mvc.TagHelpers
@model WebApp.ViewModels.Objective.ObjectiveCreateViewModel

@{
    ViewData["Title"] = "Добавить задачу";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">Название</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DueDateTime">Срок</label>
        <input asp-for="DueDateTime" class="form-control" />
        <span asp-validation-for="DueDateTime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Теги</label>
        @foreach (var label in Model.AvailableLabels)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedLabelIds" value="@label.Id" />
                <label class="form-check-label">@label.Title</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label>Участники</label>
        @foreach (var member in Model.AvailableMembers)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="SelectedMemberIds" value="@member.Id" />
                <label class="form-check-label">@member.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>