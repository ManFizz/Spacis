      <path d="M2 1a2 2 0 0 0-2 2v9a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2H2ZM1 3a1 1 0 0 1 1-1h2v2H1V3Zm4 10V2h9a1 1 0 0 1 1 1v9c0 .285-.12.543-.31.725C14.15 11.494 12.822 10 10 10c-3.037 0-4.345 1.73-4.798 3H5Zm-4-2h3v2H2a1 1 0 0 1-1-1v-1Zm3-1H1V8h3v2Zm0-3H1V5h3v2Z"/>
    </symbol>
</svg>
<div class="d-flex flex-nowrap" style="height: 100vh;">
    <div class="d-flex flex-column flex-shrink-0 p-3 bg-body-tertiary" style="width: 280px; height: 100%;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
            <svg class="bi pe-none me-2" width="24" height="24"><use xlink:href="#calendar-check" /></svg>
            <span class="fs-4">
                @if (currentUser?.SelectedProject == null)
                {
                    @:To/do
                }
                else
                {
                    @currentUser.SelectedProject.Title
                }
            </span>
        </a>
        <hr>
        @{
            var navigationItems = new[]
            {
                new { Controller = "Objective", Action = "DisplayList", Icon = "list-task", Text = "Tasks", RequireRole = "User" },
                new { Controller = "User", Action = "DisplayList", Icon = "peoples", Text = "Users", RequireRole = "Admin" },
                new { Controller = "Member", Action = "DisplayList", Icon = "peoples", Text = "Members", RequireRole = "User" },
                new { Controller = "Project", Action = "DisplayList", Icon = "collection", Text = "Projects", RequireRole = "User" },
                new { Controller = "Label", Action = "DisplayList", Icon = "tags", Text = "Labels", RequireRole = "User" },
                new { Controller = "Status", Action = "DisplayList", Icon = "checks-grid", Text = "Statuses", RequireRole = "User" },
                new { Controller = "Action", Action = "DisplayList", Icon = "list-columns", Text = "Actions", RequireRole = "Admin" },
                new { Controller = "Role", Action = "DisplayList", Icon = "person-video", Text = "Roles", RequireRole = "Admin" }
            };
        }
        
        <ul class="nav nav-pills flex-column mb-auto">
            @foreach (var navItem in navigationItems)
            {
                if (!User.IsInRole(navItem.RequireRole))
                    continue;
                
                <li class="nav-item">
                    <a class="nav-link @NavManage(navItem.Text)" asp-controller="@navItem.Controller" asp-action="@navItem.Action">
                        <svg class="bi pe-none me-2" width="20" height="20"><use xlink:href="#@navItem.Icon" /></svg>
                        @navItem.Text
                    </a>
                </li>
            }
        </ul>
        <hr>
        <div class="d-flex">
            @if(User.Identity!.IsAuthenticated)
            {
                <p>@User.Identity.Name</p>
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Выход" />
                </form>
            }
            else
            {
                <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">
                    Войти
                </a>
                <a class="btn btn-warning" asp-controller="Account" asp-action="Register">
                    Зарегестрироваться
                </a>
            }
        </div>
    </div>
    <div class="container-fluid pt-3">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/moment/moment-with-locales.js" type="text/javascript"></script>
<script>moment.locale('ru');</script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>